{
  "openapi": "3.0.0",
  "info": {
    "title": "Careflow Healthcare AI API",
    "version": "1.0.0",
    "description": "API documentation for the Careflow Healthcare AI backend."
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Local Development Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "email": { "type": "string" },
          "role": { "type": "string", "enum": ["admin", "doctor", "nurse", "receptionist", "patient"] },
          "full_name": { "type": "string" }
        }
      },
      "Patient": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "full_name": { "type": "string" },
          "email": { "type": "string" },
          "dob": { "type": "string", "format": "date" },
          "gender": { "type": "string" },
          "phone": { "type": "string" }
        }
      },
      "Appointment": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "patient": { "type": "string", "description": "Patient ID" },
          "doctor": { "type": "string", "description": "Doctor ID" },
          "date_time": { "type": "string", "format": "date-time" },
          "reason": { "type": "string" },
          "status": { "type": "string", "enum": ["scheduled", "completed", "cancelled"] }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/users/": {
      "post": {
        "summary": "Register a new user (Admin only)",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "name": { "type": "string" },
                  "role": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User created" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "User Login",
        "tags": ["Auth"],
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" }
        }
      }
    },
    "/users/current-user": {
      "get": {
        "summary": "Get Current User Profile",
        "tags": ["Users"],
        "responses": {
          "200": { "description": "User profile retrieved" }
        }
      }
    },
    "/patients/register": {
      "post": {
        "summary": "Register a new patient",
        "tags": ["Patients"],
        "security": [],
        "responses": {
          "201": { "description": "Patient registered" }
        }
      }
    },
    "/patients/appointments": {
      "get": {
        "summary": "Get Patient Appointments",
        "tags": ["Patients"],
        "responses": {
          "200": { "description": "List of appointments" }
        }
      },
      "post": {
        "summary": "Book an Appointment",
        "tags": ["Patients"],
        "responses": {
          "201": { "description": "Appointment booked" }
        }
      }
    },
    "/appointments/": {
      "post": {
        "summary": "Book Appointment (General)",
        "tags": ["Appointments"],
        "responses": {
          "201": { "description": "Booked" }
        }
      },
      "get": {
        "summary": "Get All Appointments",
        "tags": ["Appointments"],
        "responses": {
          "200": { "description": "List of all appointments" }
        }
      }
    },
    "/inventory/": {
      "get": {
        "summary": "Get Inventory List",
        "tags": ["Inventory"],
        "responses": {
          "200": { "description": "Inventory items" }
        }
      },
      "post": {
        "summary": "Add Inventory Item (Admin)",
        "tags": ["Inventory"],
        "responses": {
          "201": { "description": "Item added" }
        }
      }
    },
    "/beds/": {
      "get": {
        "summary": "Get All Beds",
        "tags": ["Beds"],
        "responses": {
          "200": { "description": "List of beds" }
        }
      }
    },
    "/beds/available": {
      "get": {
        "summary": "Get Available Beds",
        "tags": ["Beds"],
        "responses": {
          "200": { "description": "List of available beds" }
        }
      }
    },
    "/dashboard/admin": {
      "get": {
        "summary": "Get Admin Dashboard Metrics",
        "tags": ["Dashboard"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Admin metrics (Users, Appointments, Inventory, Beds)" },
          "403": { "description": "Forbidden (Admin only)" }
        }
      }
    },
    "/dashboard/doctor": {
      "get": {
        "summary": "Get Doctor Dashboard Metrics",
        "tags": ["Dashboard"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Doctor metrics (Patients, Visits, Notes)" }
        }
      }
    },
    "/dashboard/nurse": {
      "get": {
        "summary": "Get Nurse Dashboard Metrics",
        "tags": ["Dashboard"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Nurse metrics (Capacity, Alerts, Vitals)" }
        }
      }
    },
    "/dashboard/receptionist": {
      "get": {
        "summary": "Get Receptionist Dashboard Metrics",
        "tags": ["Dashboard"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Receptionist metrics (Appointments, Queue, Check-ins)" }
        }
      }
    }
  }
}
